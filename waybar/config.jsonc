//	"format": "{}",
//	"format-off": "OFF"
//    },
    "custom/server": {
        "exec": "curl https://api.mcstatus.io/v2/status/java/$(cat ~/.mc_url)  | jq -r --unbuffered --compact-output '.players | {\"text\": .online, \"tooltip\": [.list .[].name_clean] | join(\"\n\")}'",
        // This should refresh the player count on click
        "on-click": "",
        "return-type": "json",
        "interval": 480,
        "format": " {}"
